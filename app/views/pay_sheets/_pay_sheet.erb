<tr>
  <td class="pay_sheet">
    <span class="pay_period">
      <strong>
        <%= pay_sheet.job.name.capitalize %> pay sheet for
        week ending <%= pay_sheet.pay_period.end_date %> <br/>
      </strong>
    </span>
    <% pay_sheet.shifts.each do |shift| %>
        <span class="date"><%= shift.date.strftime("%A %b %d") %>:</span>
        <span class="shift">Shift: <%= shift.shift %></span>
        <span class="hours">Hours: <%= shift.hours %></span>
        <br/>
    <% end %>
    <span class="total_hours"></span><strong>Total Hours: <%= pay_sheet.total_hours %></strong></span>
    <br />
    <% if pay_sheet.current_pay_period? %>
        <%= link_to "edit", edit_pay_sheet_path(pay_sheet) %>
    <% end %>
  </td>
</tr>